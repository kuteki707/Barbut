<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".six_dice">

    <TextView
        android:id="@+id/text_view_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/aldrich"
        android:text="6"
        android:textColor="#000000"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_dice_6_1"
        android:layout_width="110dp"
        android:layout_height="110dp"
        app:layout_constraintBottom_toTopOf="@+id/img_dice_6_4"
        app:layout_constraintEnd_toStartOf="@+id/img_dice_6_2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_dice_1" />

    <ImageView
        android:id="@+id/img_dice_6_2"
        android:layout_width="110dp"
        android:layout_height="110dp"
        app:layout_constraintBottom_toBottomOf="@+id/img_dice_6_1"
        app:layout_constraintEnd_toStartOf="@+id/img_dice_6_3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/img_dice_6_1"
        app:srcCompat="@drawable/ic_dice_1" />

    <ImageView
        android:id="@+id/img_dice_6_3"
        android:layout_width="110dp"
        android:layout_height="110dp"
        app:layout_constraintBottom_toBottomOf="@+id/img_dice_6_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/img_dice_6_2"
        app:srcCompat="@drawable/ic_dice_1" />

    <ImageView
        android:id="@+id/img_dice_6_4"
        android:layout_width="110dp"
        android:layout_height="110dp"
        app:layout_constraintBottom_toBottomOf="@+id/img_dice_6_6"
        app:layout_constraintEnd_toStartOf="@+id/img_dice_6_5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_dice_1" />

    <ImageView
        android:id="@+id/img_dice_6_5"
        android:layout_width="110dp"
        android:layout_height="110dp"
        app:layout_constraintBottom_toBottomOf="@+id/img_dice_6_6"
        app:layout_constraintEnd_toStartOf="@+id/img_dice_6_6"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/img_dice_6_4"
        app:srcCompat="@drawable/ic_dice_1" />

    <ImageView
        android:id="@+id/img_dice_6_6"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toTopOf="@+id/text_view_6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/img_dice_6_5"
        app:srcCompat="@drawable/ic_dice_1" />

    <Button
        android:id="@+id/button_6"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/button_text"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_6" />
</androidx.constraintlayout.widget.ConstraintLayout>